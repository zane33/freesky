# Port configuration
PORT=3000
BACKEND_PORT=8005

# API configuration
# For local development:
# API_URL=http://localhost:3000
# For remote deployment (replace with your server's IP):
API_URL=http://192.168.1.100:3000
BACKEND_URI=http://localhost:8005

# Content provider
DADDYLIVE_URI=https://thedaddy.click

# Performance configuration
WORKERS=6

# Content proxy settings
PROXY_CONTENT=TRUE

# SOCKS5 proxy (optional)
# SOCKS5=127.0.0.1:1080

# Remote deployment example:
# If your server IP is 192.168.1.100:
# API_URL=http://192.168.1.100:3000
# BACKEND_URI=http://localhost:8005
# 
# If you have a domain:
# API_URL=https://your-domain.com
# BACKEND_URI=http://localhost:8005
#
# Note: BACKEND_URI should usually stay as localhost since it's internal container communication
# API_URL should be the external address that clients will connect to 